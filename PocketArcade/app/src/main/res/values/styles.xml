<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Retro Arcade Text Style -->
    <style name="ArcadeTitle">
        <item name="android:fontFamily">@font/pixelify_sans_regular</item>
        <item name="android:textColor">#00FFAA</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ArcadeGameTitle" parent="ArcadeTitle">
        <item name="android:fontFamily">@font/pixelify_sans_regular</item>
        <item name="android:shadowColor">#FF00FF</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ArcadeText">
        <item name="android:textColor">#FFCC00</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/pixelify_sans_regular</item>
    </style>

    <style name="ArcadeTextSmall" parent="ArcadeText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArcadeTextMedium" parent="ArcadeText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ArcadeTextBig" parent="ArcadeText">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ArcadeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/pixelify_sans_regular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#88FFFFFF</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ArcadeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/pixelify_sans_regular</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:background">@drawable/btn_arcade</item>
        <item name="android:shadowColor">#00FFFF</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ArcadeRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/pixelify_sans_regular</item>
        <item name="android:textColor">#FFCC00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:buttonTint">#00FFAA</item>
    </style>

    <!-- App components -->
    <style name="Widget.App.CloseButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_close_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:contentDescription">@string/close_game</item>
    </style>

</resources>
