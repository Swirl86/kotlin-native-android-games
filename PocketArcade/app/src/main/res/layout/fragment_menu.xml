<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#050543">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="48sp"
        android:textStyle="bold"
        android:shadowColor="#FF00FF"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:paddingBottom="40dp"
        android:gravity="center"
        style="@style/ArcadeTitle" />

    <!-- Tic Tac Toe -->
    <Button
        android:id="@+id/btn_tictactoe"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/tic_tac_toe"
        style="@style/ArcadeButton"/>

    <Button
        android:id="@+id/btn_hangman"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/hangman"
        android:layout_marginTop="16dp"
        style="@style/ArcadeButton"/>

    <!-- Dummy buttons -->
    <Button
        android:id="@+id/btn_dummy1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Coming soon..."
        android:enabled="false"
        android:background="#333"
        android:layout_marginTop="16dp"
        style="@style/ArcadeText" />

    <Button
        android:id="@+id/btn_dummy2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Coming soon..."
        android:enabled="false"
        android:background="#333"
        android:layout_marginTop="12dp"
        style="@style/ArcadeText" />

</LinearLayout>
