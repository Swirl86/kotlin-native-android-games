<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#050543"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Game Title -->
            <TextView
                android:id="@+id/tvHangmanTitle"
                style="@style/ArcadeGameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/hangman" />

            <!-- Hangman drawing -->
            <ImageView
                android:id="@+id/iv_hangman"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/hangman_image" />

            <!-- Word -->
            <TextView
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                tools:text="A _ D _ _ D"
                style="@style/ArcadeTextBig" />

            <!-- Guessed letters -->
            <TextView
                android:id="@+id/tv_guessed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ArcadeTextSmall"
                android:layout_marginBottom="6dp"
                tools:text="Incorrect: 0/6" />

            <!-- Letter buttons -->
            <GridLayout
                android:id="@+id/grid_letters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:columnCount="6"
                android:orientation="horizontal"
                android:rowCount="6" />

            <!-- Reset button -->
            <Button
                android:id="@+id/btn_reset"
                style="@style/ArcadeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:text="@string/restart" />

        </LinearLayout>
    </ScrollView>

    <!-- Close button top-right -->
    <ImageButton
        android:id="@+id/btn_close"
        style="@style/Widget.App.CloseButton"
        android:layout_margin="32dp"
        android:layout_gravity="top|end"
        android:contentDescription="@string/close_game"/>
</FrameLayout>
