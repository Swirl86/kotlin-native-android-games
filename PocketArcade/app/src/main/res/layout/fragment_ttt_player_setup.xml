<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050543"
    android:padding="32dp"
    tools:context=".games.tictactoe.setup.TttPlayerSetupFragment">

    <!-- Centered Content -->
    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/ArcadeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:shadowColor="#FF00FF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="@string/number_of_players" />

        <RadioGroup
            android:id="@+id/rgPlayerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbSinglePlayer"
                style="@style/ArcadeTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/one_player" />

            <RadioButton
                android:id="@+id/rbTwoPlayers"
                style="@style/ArcadeTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two_players" />
        </RadioGroup>

        <EditText
            android:id="@+id/etPlayer1Name"
            style="@style/ArcadeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF00FF"
            android:hint="@string/player_1_name"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#75C5C5"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etPlayer2Name"
            style="@style/ArcadeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF00FF"
            android:enabled="false"
            android:hint="@string/player_2_name"
            android:padding="12dp"
            android:textColor="#AAAAAA"
            android:textSize="18sp"
            tools:text="AI Bot" />

        <Button
            android:id="@+id/btnStartGame"
            style="@style/ArcadeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/start_game" />
    </LinearLayout>

    <!-- Close Button top-right -->
    <ImageButton
        android:id="@+id/btn_close"
        style="@style/Widget.App.CloseButton"
        android:contentDescription="@string/close_game"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
