<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050543"
    android:padding="32dp"
    tools:context=".setup.PlayerSetupFragment">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/ArcadeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:shadowColor="#FF00FF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="@string/number_of_players"/>

        <RadioGroup
            android:id="@+id/rgPlayerCount"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                style="@style/ArcadeTextSmall"
                android:id="@+id/rbSinglePlayer"
                android:text="@string/one_player"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                style="@style/ArcadeTextSmall"
                android:id="@+id/rbTwoPlayers"
                android:text="@string/two_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <EditText
            style="@style/ArcadeText"
            android:id="@+id/etPlayer1Name"
            android:hint="@string/player_1_name"
            android:textColorHint="#75C5C5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF00FF"
            android:padding="12dp"
            android:textSize="18sp"/>

        <EditText
            style="@style/ArcadeText"
            android:id="@+id/etPlayer2Name"
            android:hint="@string/player_2_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:textColor="#AAAAAA"
            android:backgroundTint="#FF00FF"
            android:padding="12dp"
            android:textSize="18sp"
            tools:text="AI Bot"/>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/start_game"
            style="@style/ArcadeButton"/>
    </LinearLayout>
</ScrollView>
